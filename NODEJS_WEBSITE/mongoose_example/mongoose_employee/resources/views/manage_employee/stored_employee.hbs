<div class="mt-4">
  <div>
    <h3>My courses</h3>
    <a href="/me/trash/courses">Rubbish ({{deletedCount}})</a>
  </div>
  <table class="table mt-4 mr-3 ml-3">
    <thead>
      <tr>
        <th scope="col">STT</th>
        <th scope="col">Name</th>
        <th scope="col">Position</th>
        <th scope="col" colspan="2">Code Resident</th>
      </tr>
    </thead>
    <tbody>
      {{#each employees}}
        <tr>
          <th scope="row">{{sum @index 1}}</th>
          <td>{{this.name}}</td>
          <td>{{this.position}}</td>
          <td>{{this.code_resident}}</td>
          <td>
            <a href="/employee/{{this._id}}/edit" class="btn btn-link">Edit</a>
            <a
              href=""
              class="btn btn-link"
              data-toggle="modal"
              data-id="{{this._id}}"
              data-target="#delete-employee-modal"
            >Delete</a>
          </td>
        </tr>
      {{else}}
        <tr>'
          <td colspan="5" class="text-center">
            Don't have any employees.
            <a href="/employee/create">Create course</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
{{! Confirm delete course }}
<div id="delete-employee-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Fire Staff</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Do you want to fire this staff?</p>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Cancel</button>
        <button id="btn-delete-employee" type="button" class="btn btn-danger">
          Fire</button>
      </div>
    </div>
  </div>
</div>
{{! Delete hidden form }}
<form name="delete-employee-form" method="POST"></form>
<script>
  document.addEventListener('DOMContentLoaded', function(){ var courseId; var
  deleleForm = document.fors['delete-employee-form']; var btnDeleteCourse =
  document.getElementById('btn-delete-employee');
  $('#delete-employee-modal').on('show.bs.modal', function(event){ var button =
  $(event.relatedTarget); courseId = button.data('id'); }); // When delete
  course btn clicked btnDeleteCourse.onclick = function(){ deleteForm.action =
  '/courses/'+courseId+'?_method=DELETE'; deleteForm.submit(); } });
</script>