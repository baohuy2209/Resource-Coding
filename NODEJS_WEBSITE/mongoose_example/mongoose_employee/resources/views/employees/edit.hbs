<div class="registration-form">
  <div class="mt-4">
    <form action="/employee/{{employee._id}}?_method=PUT" method="POST">
      <div class="form-icon">
        <span><i class="icon icon-user"></i></span>
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="name"
          name="name"
          value="{{employee.name}}"
        />
      </div>
      <div class="form-group">
        <input
          type="email"
          class="form-control item"
          id="email"
          name="email"
          value="{{employee.email}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="age"
          name="age"
          value="{{employee.age}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="position"
          name="position"
          value="{{employee.position}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="salary"
          name="salary"
          value="{{employee.salary}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="phonenumber"
          name="phonenumber"
          value="{{employee.phonenumber}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="dob"
          name="dob"
          value="{{employee.dob}}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          class="form-control item"
          id="code_resident"
          name="code_resident"
          value="{{employee.code_resident}}"
        />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-block create-account">Save update</button>
      </div>
    </form>
  </div>
</div>