<style>
  body { background-image:
  url("https://i.pinimg.com/236x/f2/c1/36/f2c1361263f42692913afcda1a4b0636.jpg")
  no-repeat cover; } .banner { background: #a770ef; background:
  -webkit-linear-gradient(to right, #a770ef, #cf8bf3, #fdb99b); background:
  linear-gradient(to right, #a770ef, #cf8bf3, #fdb99b); }
</style>
<div class="container-fluid">
  <div class="px-lg-5">

    <!-- For demo purpose -->
    <div class="row py-5">
      <div class="col-lg-12 mx-auto">
        <div class="text-white p-5 shadow-sm rounded banner align-middle">
          <h1 class="display-4">The Reference Book</h1>
          <p class="lead">Snippet by
            <a href="https://bootstrapious.com/snippets" class="text-reset">
              Nguyen Bao Huy</a>, Image credit: Internet
          </p>
        </div>
      </div>
    </div>
    <!-- End -->

    <div class="row">
      <!-- Gallery item -->
      {{#each books}}
        <!--Begine-->
        <div class="col-xl-3 col-lg-4 col-md-6 mb-4">
          <div class="bg-white rounded shadow-sm">
            <a
              href="/book_reference/{{this.slug}}"
              class="text-decoration-none"
            >
              <img src="{{this.Image}}" alt="" class="img-fluid card-img-top" />
            </a>
            <div class="p-4">
              <h5>
                <a
                  href="/book_reference/{{this.slug}}"
                  class="text-dark text-decoration-none"
                >{{this.Name}}</a></h5>
              <p>Product is supplied by Nguyen Bao Huy</p>
              <div
                class="d-flex align-items-center justify-content-between rounded-pill bg-light px-3 py-2 mt-4"
              >
                <p class="small mb-0"><i class="fa fa-picture-o mr-2"></i><span
                    class="font-weight-bold"
                  >PNG</span></p>
                <div
                  class="badge badge-primary px-3 rounded-pill font-weight-normal"
                >Trend</div>
              </div>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
    <div class="py-5 text-right"><a
        href="#"
        class="btn btn-dark px-5 py-3 text-uppercase"
      >Show me more</a></div>
  </div>
</div>